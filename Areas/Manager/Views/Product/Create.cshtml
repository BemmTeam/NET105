@model NET105.Entities.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
}


<div class="row">
    @await Html.PartialAsync("_MessagePartial")
    <div class="col-sm-12">
        <a class="btn btn-primary col-3" asp-action="Index"><i class="far fa-caret-square-left"></i> Quay lại</a>
        <hr>
        <div class="white-box row">

            <div class="col-lg-4 col-xlg-3 col-md-12">
               
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-12 col-xlg-9 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="Create" class="form-horizontal form-material">

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Name)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Name" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Name"></span>
                            </div>

                             <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Address)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Address" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Address"></span>
                            </div>


                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Desc)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Desc" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Desc"></span>
                            </div>


                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Quantity)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Quantity" type="number" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Quantity"></span>
                            </div>

                       

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Price)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="Price" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Price"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.ImageUrl)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input asp-for="ImageUrl" type="text" class="form-control p-0 border-0">
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="ImageUrl"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">@Html.DisplayNameFor(item => item.Category)</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <select asp-for="CategoryId" class="form-control p-0 border-0"
                                        asp-items="ViewBag.CategoryId">
                                    </select>
                                </div>
                                <span class="badge bg-danger text-light" asp-validation-for="Category"></span>
                            </div>

                         


                            <div class="form-group mb-4">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-success"><i class="fas fa-plus-circle"></i> Thêm sản phẩm</button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>